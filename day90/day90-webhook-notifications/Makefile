.PHONY: help install start stop test clean build docker-build docker-run

# Default target
help:
	@echo "Available commands:"
	@echo "  install     - Install dependencies and setup environment"
	@echo "  start       - Start the application"
	@echo "  stop        - Stop the application"
	@echo "  test        - Run tests"
	@echo "  clean       - Clean up temporary files"
	@echo "  build       - Build frontend"
	@echo "  docker-build - Build Docker image"
	@echo "  docker-run  - Run with Docker Compose"

# Install dependencies
install:
	@echo "ğŸ“¦ Installing dependencies..."
	python3.11 -m venv venv
	. venv/bin/activate && pip install -r requirements.txt
	cd frontend && npm install

# Start the application
start:
	@echo "ğŸš€ Starting application..."
	./start.sh

# Stop the application
stop:
	@echo "ğŸ›‘ Stopping application..."
	./stop.sh

# Run tests
test:
	@echo "ğŸ§ª Running tests..."
	. venv/bin/activate && python -m pytest tests/ -v

# Clean up
clean:
	@echo "ğŸ§¹ Cleaning up..."
	rm -rf src/__pycache__
	rm -rf .pytest_cache
	rm -rf frontend/build
	rm -rf frontend/node_modules
	find . -type f -name "*.pyc" -delete
	find . -type d -name "__pycache__" -delete

# Build frontend
build:
	@echo "ğŸ—ï¸ Building frontend..."
	cd frontend && npm run build

# Docker commands
docker-build:
	@echo "ğŸ³ Building Docker image..."
	docker build -t webhook-notifications .

docker-run:
	@echo "ğŸ³ Running with Docker Compose..."
	docker-compose up -d

docker-stop:
	@echo "ğŸ³ Stopping Docker containers..."
	docker-compose down

# Development helpers
dev-install:
	@echo "ğŸ”§ Installing development dependencies..."
	. venv/bin/activate && pip install pytest pytest-asyncio pytest-cov black flake8

format:
	@echo "ğŸ¨ Formatting code..."
	. venv/bin/activate && black src/ tests/

lint:
	@echo "ğŸ” Linting code..."
	. venv/bin/activate && flake8 src/ tests/

# Database and data management
reset-data:
	@echo "ğŸ—‘ï¸ Resetting demo data..."
	rm -f data/*.json

# Monitoring and logs
logs:
	@echo "ğŸ“‹ Showing logs..."
	tail -f logs/app.log

# Health check
health:
	@echo "ğŸ¥ Checking application health..."
	curl -f http://localhost:8000/api/v1/health || echo "âŒ Application not responding"
